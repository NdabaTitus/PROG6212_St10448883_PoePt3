<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildTrack Claim System</title>

    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">

    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClassPrep.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="BuildTrack Logo" height="30" class="me-2">
                    BuildTrack Claim System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* Worker menu *@
                        @if (User.IsInRole("Worker"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="MyClaims">My Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="Create">New Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="PaymentSimulation">Payment Simulation</a>
                            </li>
                        }

                        @* Project Manager menu *@
                        @if (User.IsInRole("ProjectManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="PmPending">PM Pending Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="PmNotifications">PM Notifications</a>
                            </li>
                        }

                        @* Construction Manager menu *@
                        @if (User.IsInRole("ConstructionManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="CmReviewList">CM Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="CmNotifications">CM Notifications</a>
                            </li>
                        }

                        @* HR menu *@
                        @if (User.IsInRole("HR"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WorkClaims" asp-action="HrAllClaims">All Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Hr" asp-action="HrSummary">Summary</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Hr" asp-action="HrExportCsv">Export CSV</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Hr" asp-action="EmployeeList">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Hr" asp-action="AddEmployee">Add Employee</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            &copy; 2025 - BuildTrack Claim System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
