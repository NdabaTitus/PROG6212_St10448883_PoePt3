@model Poe.Models.AddEmployeeViewModel

@{
    ViewData["Title"] = "Add Employee";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h2 class="mb-0">Add a New Employee</h2>
        </div>

        <div class="card-body">

            <p class="text-muted text-center mb-4">
                Fill in the details below to register a new employee into the BuildTrack Claim System.
            </p>

            <form asp-action="AddEmployee" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="fw-bold"></label>
                    <input asp-for="Name" class="form-control rounded-3" placeholder="Enter employee's name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Surname" class="fw-bold"></label>
                    <input asp-for="Surname" class="form-control rounded-3" placeholder="Enter employee's surname" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="fw-bold"></label>
                    <input asp-for="Department" class="form-control rounded-3" placeholder="e.g. Maintenance, Electrical" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DefaultRatePerJob" class="fw-bold"></label>
                    <input asp-for="DefaultRatePerJob" class="form-control rounded-3" placeholder="Rate per job (R)" />
                    <span asp-validation-for="DefaultRatePerJob" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RoleName" class="fw-bold"></label>
                    <select asp-for="RoleName" class="form-control rounded-3">
                        <option value="">-- Select Role --</option>
                        <option value="Worker">Worker</option>
                        <option value="ProjectManager">Project Manager</option>
                        <option value="ConstructionManager">Construction Manager</option>
                        <option value="HR">HR</option>
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="fw-bold"></label>
                    <input asp-for="Email" class="form-control rounded-3" placeholder="Enter employee email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="TempPassword" class="fw-bold"></label>
                    <input asp-for="TempPassword" class="form-control rounded-3" type="password" placeholder="Temporary password" />
                    <span asp-validation-for="TempPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4 rounded-3">
                        Create Employee
                    </button>

                    <a asp-action="EmployeeList" class="btn btn-outline-secondary px-4 rounded-3">
                        Back to List
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
