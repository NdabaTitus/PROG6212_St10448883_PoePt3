@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>
<p class="text-muted">This page displays all employees and allows management actions. Useful for HR workflow and Git commit purposes.</p>

<a asp-action="AddEmployee" class="btn btn-primary mb-3">Add New Employee</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Department</th>
                <th>Default Rate (R)</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Surname</td>
                    <td>@emp.Department</td>
                    <td>@emp.DefaultRatePerJob.ToString("F2")</td>
                    <td>@emp.RoleName</td>
                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteEmployee" asp-route-id="@emp.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
